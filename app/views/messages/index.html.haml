//%h1 Messages#index
//%p Find me in app/views/messages/index.html.haml

.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name
          = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menue__new-group
            = link_to "#" do
              = icon('fas', 'edit')
          %li.side-header__box__menu__edit-user
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog')
    .groups
      .group
        %p.group__group-name
          senang
        %p.group__latest-message
          まだメッセージがありません


  .chat-main

    .main-header
      .main-header__left_box
        %h2.main-header__left-box__current-group
          senang
        %ul.main-header__left-box__member-list
          member：
          %li.main-header__left-box__member-list__member
            yukarimorikawa
      %a
        .main-header__edit-box
          Edit


    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker
            yukarimorikawa
          %p.message__upper-info__date
            2020/02/14(Fri) 20:00:00
        %p.message_text
          senang is very pretty doggo!

    .form
      %form.new_message
        .input-box
          %input{type: "text", class: "input-box__text", placeholder: "type a message"}
          %label{class: "input-box__image"}
            = icon('fas', 'image')
            %input{type: "file", class: "input-box__image__file"}
        %input{type: "submit", class: "submit-btn"}
